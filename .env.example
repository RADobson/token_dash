# Token Dashboard Environment Configuration
# Copy this file to .env and fill in your API keys

# ============================================
# InfluxDB Configuration (required)
# ============================================
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=tokendash-super-secret-token
INFLUXDB_ORG=tokendash
INFLUXDB_BUCKET=tokens

# InfluxDB Admin Password (only used for initial setup)
INFLUXDB_PASSWORD=tokendash123

# ============================================
# Grafana Configuration
# ============================================
GRAFANA_PASSWORD=admin

# ============================================
# API Keys (optional - collectors skip if not set)
# ============================================

# OpenAI - for usage data via Organization API
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Anthropic - for Claude usage data
# Get from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=

# OpenRouter - for aggregated usage across providers
# Get from: https://openrouter.ai/keys
OPENROUTER_API_KEY=

# ============================================
# OpenClaw Gateway (optional)
# ============================================
# Used by OpenClawCollector to gather session usage
OPENCLAW_GATEWAY_URL=http://host.docker.internal:18789
OPENCLAW_GATEWAY_TOKEN=

# ============================================
# Collector Settings
# ============================================
# How often to collect data (in seconds)
COLLECT_INTERVAL=300

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ============================================
# Claude Code Settings (no configuration needed)
# ============================================
# The Claude Code collector automatically reads from:
# - macOS/Linux: ~/.claude/stats-cache.json
# - Windows: %USERPROFILE%\.claude\stats-cache.json
# No API key required - it's your local usage data!
